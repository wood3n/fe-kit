{
  "name": "fe-kit",
  "private": true,
  "description": "frontend development utils and components",
  "keywords": [
    "javascript",
    "typescript",
    "frontend",
    "react",
    "react components"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wood3n/fe-kit.git"
  },
  "license": "MIT",
  "author": "oxyg3n",
  "type": "module",
  "scripts": {
    "ac": "npx changeset add",
    "build": "npx turbo run build",
    "build:components": "npx turbo run build --filter @fe-kit/components",
    "build:components-site": "npx turbo run build-storybook",
    "build:utils": "npx turbo run build --filter @fe-kit/utils",
    "coverage": "vitest run --coverage",
    "dev:components": "turbo watch @fe-kit/components#dev",
    "prepare": "is-ci || husky",
    "publish-packages": "npx turbo run build && npx changeset version && npx changeset publish",
    "test": "vitest"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "prettier-eslint --write",
    "**/*.{json,md,mdx}": "prettier --write",
    "**/*.{css,scss,sass,less}": [
      "prettier --write",
      "stylelint --fix"
    ]
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.8",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitest/coverage-istanbul": "^1.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "glob": "^11.0.0",
    "husky": "^9.0.11",
    "is-ci": "^3.0.1",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "prettier-eslint-cli": "^8.0.1",
    "prettier-plugin-packagejson": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "stylelint": "^16.8.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-prettier": "^5.0.2",
    "turbo": "^2.1.1",
    "typescript": "^5.5.2",
    "typescript-eslint": "^7.13.1",
    "vitest": "^1.6.0"
  },
  "packageManager": "pnpm@8.15.7",
  "engines": {
    "node": ">=18"
  }
}
